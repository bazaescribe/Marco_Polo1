

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseluisrosasbaza.marco_polo1.MainActivity"
    android:id="@+id/view1"
    android:background="@color/background_material_light"
    android:orientation="horizontal">

    <!--TOOLBAR-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            android:title="HOLA">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Marco Polo"
            android:id="@+id/textView1"
            android:layout_gravity="left"
            android:layout_weight="0.07" />

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/nameBar"
            android:layout_width="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="55dp"
            android:background="?attr/colorPrimaryDark"
            android:title="HOLA">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Juan de Pipas Pérez"
                android:id="@+id/textView"
                android:layout_gravity="right"
                android:layout_weight="0.07" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <!--Botones Verticales-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="130dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/LayoutLinear"
        android:weightSum="3">

        <!--Botón Jugar-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:text="Jugar"
                android:id="@+id/buttonJugar"
                android:textSize="@dimen/abc_dropdownitem_icon_width"
                android:background="@drawable/custom_button"
                android:clickable="false"
                android:textColor="#fd434343" />
        </LinearLayout>

        <!--Botón Ver mis cartas-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp">

            <Button
                    android:layout_width="150dp"
                    android:layout_height="300dp"
                    android:text="Ver mis cartas"
                    android:id="@+id/buttonViewCards"
                    android:textSize="@dimen/abc_dropdownitem_icon_width"
                    android:clickable="false"
                    android:background="@drawable/custom_button"
                    android:textColor="#FD434343" />
        </LinearLayout>

    </LinearLayout>

    <!--Botón explorar-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingTop="450dp"
        android:paddingRight="10dp"
        android:paddingLeft="250dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonExplore"
            android:onClick="sendMessage"
            android:textSize="@dimen/abc_dropdownitem_icon_width"
            android:singleLine="true"
            android:background="@drawable/custom_background"
            android:layout_gravity="right" />

    </LinearLayout>


</RelativeLayout>
