

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseluisrosasbaza.marco_polo1.MainActivity"
    android:id="@+id/view1"
    android:background="@color/background_material_light"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimaryDark"
            android:title="HOLA">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/backButton"
                android:onClick="sendMessage"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Deck Marco Polo"
                android:id="@+id/textView"
                android:layout_gravity="left"
                android:layout_weight="0.07" />

        </android.support.v7.widget.Toolbar>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/LayoutLinear"
        android:weightSum="3">

        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Ver mis cartas"
            android:id="@+id/buttonJugar"
            android:textSize="@dimen/abc_dropdownitem_icon_width"
            android:clickable="false" />

    </LinearLayout>


</RelativeLayout>
